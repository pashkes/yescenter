doctype html
html(class="no-js", lang="ru")

  include ../components/head/head.pug
  include ../components/footer/footer.pug
  include ../components/header/header
  include ../components/subscribe/subscribe
  include ../components/callback/callback
  include ../components/modal-search/modal-search
  include ../components/modal-location/modal-location
  include ../components/breadcrumb/breadcrumb
  include ../components/article-navs/article-navs
  include ../components/video-data/video-data
  include ../components/start-learn/start-learn
  include ../components/books/books
  include ../components/interestring-education/interestring-education
  include ../components/yarn/yarn
  head
    +head(head.defaults)
  body
    .page-wrapper
      +header(headerDefault)
      .container
        +breadcrumb(breadcrumb.pay)
      .container.h2--bottom-block
        h2.h2.h2--no-text-bottom.h2--bottom-block оплата
      +article-navs()
      +video-data(videoData.mainPage, 'Обучающее видео', true)
        a(href="#").show-all смотреть все видеоуроки
          span(aria-hidden="true") &nbsp;&rarr;
      +start-learn(startLearn)
      +books(books)
      +yarn(yarn)
      +subscribe()
      +interestring-education(interestingEducation).interestring-education--padding-bottom.pt-0
      +footer()
    +callback()
    +modal-search()
    +modal-location()
    script(src='%=static=%js/separate-js/svg4everybody.min.js')
    script svg4everybody();

    //- Main scripts. You can replace it, but I recommend you to leave it here
    script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" defer )
    script(src='%=static=%js/main%=hash=%.js')
