mixin interestring-education(data)
  include ../lang-card/lang-card
  section.interestring-education.courses&attributes(attributes)
    .container
      h2.interestring-education__title.h2 Меня интересует обучение
    .courses__content.courses__content--slider
      .container
        div.courses__panel.active.show
          .row.js-slider-course
            each item in data.items
              .col-auto.col-xl-3
                +lang-card(item, 'записаться').lang-card--border.courses__item
    .container
      .courses__dots
