mixin courses(data, trailLessons)
  section(class="courses section section--grey "+data.modClass)
    include ../icon/icon
    include ../lang-card/lang-card
    include ../trial-lesson/trial-lesson
    .container
      if data.mainTitle
        h2.h2.courses__title #{data.mainTitle}
        p.subtitle #{data.subtitle}
      if data.hasHeader
        .courses__header
          .courses__select.d-md-none
            span(aria-hidden="true").courses__flag.en.js-current-lang
            select.courses__select-lang.js-reviews-list
              option(value="en") Английский
              option(value="de") Немецкий
              option(value="fr") Французкий
              option(value="it") Итальянский
              option(value="es") Испанский
              option(value="zht") Китайский
              option(value="ja") Японский
            +icon('arrow-bottom', 12, 8)
          div(role="tablist").courses__langs.d-none.d-md-flex.nav
            a(href="#en" role="tab" aria-selected="true" data-toggle="tab").courses__select.active
              span(aria-hidden="true").courses__flag.en
              span.courses__name-lang Английский
            a(href="#de" role="tab" aria-selected="false" data-toggle="tab").courses__select
              span(aria-hidden="true").courses__flag.de
              span.courses__name-lang Немецкий
            a(href="#fr" role="tab" aria-selected="false" data-toggle="tab").courses__select
              span(aria-hidden="true").courses__flag.fr
              span.courses__name-lang Французкий
            a(href="#it" role="tab" aria-selected="false" data-toggle="tab").courses__select
              span(aria-hidden="true").courses__flag.it
              span.courses__name-lang Итальянский
            a(href="#es" role="tab" aria-selected="false" data-toggle="tab").courses__select
              span(aria-hidden="true").courses__flag.es
              span.courses__name-lang Испанский
            a(href="#zht" role="tab" aria-selected="false" data-toggle="tab").courses__select
              span(aria-hidden="true").courses__flag.zht
              span(aria-hidden="true").courses__name-lang Китайский
            a(href="#ja" role="tab" aria-selected="false" data-toggle="tab").courses__select
              span(aria-hidden="true").courses__flag.ja
              span(aria-hidden="true").courses__name-lang Японский
    .courses__content.courses__content--slider
      .container
        div(role="tabpanel").courses__panel.active.show#en
          .row.js-slider-course
            each item in data.items
              .col-auto.col-xl-3.d-flex.align-content-stretch
                if(item.equalGroup)
                  +lang-card(item, 'подробнее').courses__item
                else
                  +lang-card(item, 'подробнее').courses__item
    .container
      .courses__dots
    .courses__footer.text-center.d-none.d-xl-block
      .container
        a(href="#").courses__show-more.btn.btn--grey показать еще
    if data.footerText
      .container
        p.courses__desc.subtitle #{data.footerText}
    if trailLessons
      +trial-lesson(true)




