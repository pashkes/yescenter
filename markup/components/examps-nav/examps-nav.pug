mixin navLink (name, activeItem)
  .examps-nav__item
    a(href="#" class={active : name === activeItem}).examps-nav__link
      span.examps-nav__name=name
mixin examps-nav(newActive)
  nav.examps-nav&attributes(attributes)
    .container
      .row.align-items-xl-center
        .col-xl
          .js-select-custom-scroll.d-md-none
            label(for="tests").visually-hidden Наши школы
            .form__select-custom.examps-nav__select
              select(id="tests").js-select-defaul
                option Подготовка к YLE
                option Подготовка к KET
                option Подготовка к PET
                option Подготовка к FCE
                option Подготовка к CAE
                option Подготовка к CPE
                option Подготовка к IELTS
                option Подготовка к TOEFL
          .examps-nav__menu.d-none.d-md-flex
              +navLink('Подготовка к YLE', newActive)
              +navLink('Подготовка к KET', newActive)
              +navLink('Подготовка к PET', newActive)
              +navLink('Подготовка к FCE', newActive)
              .w-100.d-xl-none
              +navLink('Подготовка к CAE', newActive)
              +navLink('Подготовка к CPE', newActive)
              .w-100
              +navLink('Подготовка к IELTS', newActive)
              +navLink('Подготовка к TOEFL', newActive)
