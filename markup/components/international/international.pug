mixin international(data)
  section.international
    form.international__top#international
      .container
        .row.align-items-xl-center
          .col-xl
            .js-select-custom-scroll.d-md-none
              label(for="tests").hidden Наши школы
              .form__select-custom.international__select
                select(id="tests").js-select-defaul
                  option Подготовка к YLE
                  option Подготовка к KET
                  option Подготовка к PET
                  option Подготовка к FCE
                  option Подготовка к CAE
                  option Подготовка к CPE
                  option Подготовка к IELTS
                  option Подготовка к TOEFL
            ul.international__filters.d-none.d-md-flex
              li.international__filter.order-md-1
                label.international__item-list
                  input(type="radio" name="international-tests" checked)
                  span.international__name-filter Подготовка к YLE
              li.international__filter.order-md-2
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к KET
              li.international__filter.order-md-3
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к PET
              li.international__filter.order-md-4
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к FCE
              .w-100.d-xl-none.order-md-5.order-xl-0
              li.international__filter.order-md-8.order-xl-5
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к CAE
              li.international__filter.order-md-9.order-xl-6
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к CPE
              .w-100.d-none.d-xl-block.order-xl-7
              li.international__filter.order-md-6.order-xl-8
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к IELTS
              li.international__filter.order-md-7.order-xl-9
                label.international__item-list
                  input(type="radio" name="international-tests")
                  span.international__name-filter Подготовка к TOEFL
    .container
      .row
        each itemList in data.listCard
          .col-md-6.col-xl-4.d-flex.align-content-stretch
            .lang-card.page-eng__card.lang-card--border
              h3.page-eng__title-card.lang-card__name
                a(href="#") !{itemList.title}
              span.page-eng__subtitle.grey !{itemList.info}
              p.page-eng__desc.lang-card__desc !{itemList.desc}
              a(href="#").lang-card__more.page-eng__more.btn.btn--border-red подробнее

