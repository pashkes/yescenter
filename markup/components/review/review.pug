mixin review(data)
  .review&attributes(attributes)
    .review__top
      .review__photo
        img(src="%=static=%img/content/"+data.imgName width="80" height="80" alt=data.name)
      .reviews__info
        cite.review__name #{data.name}
        span.review__school #{data.school}
    .review__message
      p #{data.message}
