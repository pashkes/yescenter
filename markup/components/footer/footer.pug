mixin footer(data)
  include ../social/social
  footer.footer
    .container
      .footer__top
        .row.justify-content-md-between.align-items-md-center
          .col-md-7.col-xl-9
            .footer__inner-langs
              h2.footer__label-couses.d-none.d-xl-block Курсы:
              ul.footer__lang-list
