mixin page-price(data)
  include ../trial-lesson/trial-lesson
  section.page-price.timetable&attributes(attributes)
    .container
      .timetable__list
        each cardMobile in data.rows
          .timetable__item.d-xl-none
            .timetable__item-inner
              table.timetable__table-m
                tbody
                  tr
                    td.timetable__th Возраст
                    td #{cardMobile.yearsOld}
                  if cardMobile.yearsOld
                    tr
                      td.timetable__th Периодичность
                      td #{cardMobile.dayLessons}
                  tr
                    td.timetable__th Время занятий
                    td #{cardMobile.timeLessons}
                  tr
                    td.timetable__th человек в группе
                    td #{cardMobile.peopleAmount}
                  tr
                    td.timetable__th курс обучения
                    td #{cardMobile.duration}
                  tr
                    td.timetable__th Стоимость ак.ч.
                    td #{cardMobile.cost}
                tfoot
                  tr
                    td(colspan="2")
                      a(href="").timetable__btn.btn.btn--border-red-sm записаться
        table.timetable__table-d.d-none.d-xl-table
          thead
            tr
              th.timetable__th Возраст
              th.timetable__th Периодичность
              th.timetable__th Время занятий
              th.timetable__th человек в группе
              th.timetable__th курс обучения
              th.timetable__th(colspan="2") Стоимость ак.ч.
          tbody
            each rowDesktop in data.rows
              tr
                td #{rowDesktop.yearsOld}
                td #{rowDesktop.dayLessons}
                td #{rowDesktop.timeLessons}
                td #{rowDesktop.peopleAmount}
                td #{rowDesktop.duration}
                td #{rowDesktop.cost}
                td
                  a(href="#").timetable__btn
                    span записаться
      +trial-lesson()


